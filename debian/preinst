#!/bin/sh
# preinst script for wasta-core
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        # Disable interaction on configuration file modifications.  Force
        #   to use "confnew" which means install package maintainer's version

        # Later, wasta tweaks can reset anything needing adjusted

        # Needed here instead of just installed by install so that will be
        #   in place BEFORE next user dist-upgrade

        FILE=/etc/dpkg/dpkg.cfg.d/dpkg-force-confnew-preinst

        sed -i -e '$a force-confnew' \
            -e '\@force-confnew@d' \
            $FILE

        export DEBIAN_FRONTEND=noninteractive
        # Set dpkg to use noninteractive frontend
        # not needed, seems, but keeping for reference
        # dpkg-reconfigure debconf --frontend=noninteractive
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
